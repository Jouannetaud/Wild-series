{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td> <img src= "{{ program.poster }}" width= "300"</td>
            </tr>
              <tr>
                <th>Seasons</th>
                <td>
                    <ul>
                        {% for season in program.seasons %}

                        <li><a href= "{{path('program_season_show',{'programId': season.program.id, 'seasonId': season.id })}}">Saison {{ season.number }}</a></li>
                        
                        
                            
                        {% endfor %}
                    
                    </ul>
                
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
